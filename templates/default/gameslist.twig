{% block body %}
    <!doctype html>
    <html lang="fr">
    {% include 'parts/head.twig' %}

    <body>


    {% include 'parts/header.twig' %}


    <main>
        <!--SUBMIT GAMETIME FORM -->
        <section>

            <div class="container-fluid bgnav shadow-lg rounded py-5 my-5">
                <div class="row pb-2">

                        {% if searches is null %}

                            <container class="my-5 py-5">
                                <img src="../../assets/pictures/no_result.png" alt="VGT_No_Result"
                                     class="mx-auto d-block">
                                <h2 class="text-center mt-5 "> Aucun résultat trouvé, saisis au moins 3 caractères, par
                                    Krom !</h2>
                            </container>

                        {% else %}

                            <h2 class="text-center">{{searchCount}} résultats</h2>
                        {% for search in searches|slice(0,50) %}

                                <div class="col-lg-3 my-5 py-4">
                                    <div class="flip-card mx-auto gamecard" style="width:15rem;height:21rem;">
                                        <div class="flip-card-inner">
                                            <div class="flip-card-front">
                                                <img src="{{ search.picture }}" class="img-fluid w-100"
                                                     style="width:15rem;height:21rem;border-radius: 8px"
                                                     alt="Elden Ring">
                                            </div>
                                            <div class="flip-card-back">
                                                <h2 class="mt-4">{{ search.title }}</h2>
                                                <p class="text-white">Note moyenne des utilisateurs:</p>
                                                <p class="text-white-50">4.5/5</p>
                                                <a href="/home/game/{{ search.Id_Games }}" type="button"
                                                   class="btn bgsection1">Consulter</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        {% endfor %}
                    {%endif%}
                    </div>


                </div>



        </section>

    </main>
    {% include 'parts/footer.twig' %}

    <!-- JS script contained in node_modules -->

    {% include 'parts/JS_scripts.twig' %}

    </body>

    </html>

{% endblock %}