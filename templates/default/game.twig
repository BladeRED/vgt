                        </div>

                        <div class="d-flex flex-row mt-5 gametext ms-5 mb-4 justify-content-center">

                            <div class="d-flex flex-column align-items-center ms-5 subgametext">
                                <h3>Plateformes:</h3>
                                <p>{{ game.platforms }}</p>
                            </div>

                            <div class="d-flex flex-column align-items-center ms-5 subgametext">
                                <h3>Genres:</h3>
                                <p>{{ game.genres }}</p>
                            </div>

                            <div class="d-flex flex-column align-items-center ms-5 subgametext">
                                <h3>Date de parution:</h3>
                                <p> {{ game.released ? game.released|format_datetime(locale='fr',pattern="dd MMMM YYYY") : "Non communiqué" }}</p>
                            </div>

                            <div class="d-flex flex-column align-items-center ms-5 subgametext">
                                <h3>Studio:</h3>
                                <p> {{ game.studio }}</p>
                            </div>

                            <div class="d-flex flex-column align-items-center ms-5 subgametext">
                                <h3>Editeur:</h3>
                                <p> {{ game.editor}}</p>
                            </div>
                        </div>

                        <div class="d-flex flex-column align-items-center">
                            <h3 class="mb-4">Description du jeu</h3>
                            <p class="bgsection3 shadow-lg rounded px-3 py-3 text-center mx-5"> {{ game.resume }}</p>
                        </div>


