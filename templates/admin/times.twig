{% block body %}
    <!doctype html>
    <html lang="fr">
    {% include 'parts/headadmin.twig' %}

    <body>


    {% include 'parts/headeradmin.twig' %}


    <main>
        <!--INSERT CODE HERE -->

        <section>
            <div class="container my-5">
                <table class="table table-dark table-striped" id="timesTable">
                    <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col" class="text-center">Cat√©gorie</th>
                        <th scope="col" class="text-center">Temps</th>
                        <th scope="col" class="text-center">Jeu</th>
                        <th scope="col" class="text-center">Utilisateur</th>
                        <th scope="col" class="text-center">Actions</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for time in times %}
                        <tr>
                            <th scope="row">{{ time.id }}</th>
                            <td>{{ time.category }}</td>
                            <td>{{ time.hours }}hrs {{ time.minuts }}min {{ time.seconds }}s</td>
                            <td>{{ time.game.title }}</td>
                            <td>{{ time.gamer.pseudo }}</td>
                            <td>
                                <a href="/admin/deleteTimes/{{ time.id }}" type="button"
                                   class="btn btn-lg btn-danger my-3 ">Supprimer</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>


    {% include 'parts/footer.twig' %}

    <!-- JS scripts -->

    {% include 'parts/JS_scripts.twig' %}

    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"
            integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
    <script type="text/javascript"
            src="https://cdn.datatables.net/v/bs5/dt-1.12.1/r-2.3.0/sc-2.0.6/sl-1.4.0/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#timesTable').DataTable({});
        });
    </script>

    </body>
    </html>
{% endblock %}