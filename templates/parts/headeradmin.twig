<header>
    <div class="container-fluid">

        <div class="row ">

            <div class="col-lg-4 logo">
                <div class="d-flex flex-row navhead">
                    <!-- Logo -->
                    <a href="/">
                        <img src="../../assets/pictures/logo.svg" class="py-2 mx-3"
                             style="height: 160px ;width: 160px"
                             alt="VGT_logo">
                    </a>
                    <h1>VideoGameTime</h1>
                </div>
            </div>

            <div class="col-lg-4 searchbar">

                <!-- Searchbar -->
                <div class="d-flex flex-row navhead">
                    <form method="post" action="/home/search" class="w-100" id="formSearch" name="formSearch">
                        <div class="search mt-5 mx-5 py-2 searchbar">
                            <input type="text" class="searchTerm" name="searchResult" id="searchResult"
                                   placeholder="Cherche tes jeux ici !">
                            <button type="submit" class="searchIcon" aria-label="Search Icon">
                                <i class="fa fa-search"></i>
                            </button>

                        </div>
                        <ul class="bg-light py-3  ms-5 rounded-2 w-75 list-group list-group-flush searchHide searchHidden scroller">

                        </ul>
                    </form>
                </div>
            </div>

            <div class="col-lg-4 ">
                <!-- Submit and Log buttons-->
                <div class="d-flex flex-row logsubmit">
                    {% if gamer %}
                        <div class="col-lg-4 d-flex justify-content-end subutton">
                            <a href="/security/submit">
                                <img src="../../assets/pictures/submit.png"
                                     class="img-fluid rounded mx-auto d-block mt-5"
                                     style="height: 64px ;width: 64px" alt="VGT_submit">
                                <p class="text-center"> Soumettre un temps </p>
                            </a>
                        </div>
                        <div class="col-lg-4 account logbutton prout">

                            <a href="/security/gamer">
                                <img src="../../assets/pictures/home.png" class="img-fluid rounded mx-auto d-block mt-5"
                                     style="height: 64px ;width: 64px" alt="VGT_login">
                                <p class="text-center"> Mon compte </p>
                            </a>

                        </div>
                        <div class="col-lg-4 logbutton">

                            <a href="/security/logout">
                                <img src="../../assets/pictures/login.png"
                                     class="img-fluid rounded mx-auto d-block mt-5"
                                     style="height: 64px ;width: 64px" alt="VGT_login">
                                <p class="text-center"> DÃ©connexion </p>
                            </a>

                        </div>
                    {% else %}
                        <div class="col-lg-6 d-flex justify-content-end subutton">
                            <a href="/security/submit">
                                <img src="../../assets/pictures/submit.png"
                                     class="img-fluid rounded mx-auto d-block mt-5"
                                     style="height: 64px ;width: 64px" alt="VGT_submit">
                                <p class="text-center"> Soumettre un temps </p>
                            </a>
                        </div>
                        <div class="col-lg-6 logbutton">

                            <a href="/home/login">
                                <img src="../../assets/pictures/login.png"
                                     class="img-fluid rounded mx-auto d-block mt-5"
                                     style="height: 64px ;width: 64px" alt="VGT_login">
                                <p class="text-center"> Connexion/Inscription </p>
                            </a>

                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light bgsection ">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav w-100 d-flex justify-content-center">
                        <li class="nav-item me-3 ">
                            <a class="nav-link active navbarAnimation d-flex align-items-center me-5 "
                               aria-current="page"
                               href="/admin/dashboard">
                                <i class="fa-solid fa-chart-pie fa-2x py-2 fa-fw"></i>
                                Dashboard</a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link navbarAnimation d-flex align-items-center mx-5" href="/admin/users">
                                <i class="fa-solid fa-user-gear fa-2x py-2 me-2"></i>
